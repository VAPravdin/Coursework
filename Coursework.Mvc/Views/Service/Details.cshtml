@using Coursework.Entities
@model ServiceEntity
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Service details</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            font-weight: 300;
            line-height: 1.42em;
            color: #A7A1AE;
            background-color: #1F2739;
        }

        h1 {
            font-size: 3em;
            font-weight: 300;
            line-height: 1em;
            text-align: center;
            color: #4DC3FA;
            margin-top: 30px;
        }

        .service-details {
            width: 80%;
            margin: 20px auto;
            background-color: #2C3446;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
            color: #FFFFFF;
        }

            .service-details p {
                margin: 10px 0;
            }

        h2 {
            font-size: 2em;
            font-weight: 300;
            text-align: center;
            color: #FB667A;
            margin-top: 30px;
        }

        .btn-container {
            text-align: center;
            margin: 20px 0;
        }

        .btn {
            margin: 10px 5px;
            padding: 10px 20px;
            font-weight: bold;
            text-decoration: none;
            color: #FFFFFF;
            background-color: #007bff;
            border-radius: 5px;
        }

        .btn-secondary {
            background-color: #6c757d;
        }

    </style>
</head>
<body>

    <h1>Service details</h1>

    <div class="service-details">
        <h4>@Model.Name</h4>
        <p>Default Price: @Model.DefaultPrice</p>
        <p>Discount Price: @Model.DiscountPrice</p>
        <p>Description: @Model.Description</p>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-primary">Back to list</a>
    </div>

</body>
</html>